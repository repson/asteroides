<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:key="preferencias_principal" >
  <CheckBoxPreference
    android:key="musica"
    android:title="@string/ReproducirMusica"
    android:summary="@string/MusicaSummary"/>
  <ListPreference
    android:key="graficos"
    android:title="@string/TipoGraficos"
    android:summary="@string/GraficosSummary"
    android:entries="@array/tiposGraficos"
    android:entryValues="@array/tiposGraficosValores"
    android:defaultValue="1"/>
  <EditTextPreference
    android:key="fragmentos"
    android:title="@string/NumeroFragmentos"
    android:summary="@string/FragmentosSummary"
    android:defaultValue="3"/>
</PreferenceScreen>